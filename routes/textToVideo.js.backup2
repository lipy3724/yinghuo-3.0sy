      console.log(`è§„èŒƒåŒ–åçš„ä»»åŠ¡çŠ¶æ€: ${normalizedStatus} (åŸå§‹çŠ¶æ€: ${taskStatus})`);
      
      // æ›´æ–°æœ¬åœ°ä»»åŠ¡çŠ¶æ€
      const userTaskIndex = userTasks[userId].findIndex(task => task.id === taskId);
      if (userTaskIndex !== -1) {
