                request_id: null
            });
        }
        
        // éªŒè¯æ¨¡å‹åç§°
        if (!model.includes('wanx2.1-i2v')) {
            return res.status(400).json({
                status_code: 400,
                code: 'InvalidParameter',
                message: 'ä¸æ”¯æŒçš„æ¨¡å‹åç§°ï¼Œå›¾ç”Ÿè§†é¢‘åº”ä½¿ç”¨wanx2.1-i2v-turboæˆ–wanx2.1-i2v-plusæ¨¡å‹',
