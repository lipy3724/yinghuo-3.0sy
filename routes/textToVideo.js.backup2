        // è·å–åŠŸèƒ½é…ç½®ä¿¡æ¯
        const { FEATURES } = require('../middleware/featureAccess');
        const creditCost = FEATURES['image-to-video']?.creditCost || 66; // é»˜è®¤ä¸æ–‡ç”Ÿè§†é¢‘ç›¸åŒçš„æˆæœ¬
        
