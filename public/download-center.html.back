        // 过滤图片函数
        function filterImages(type) {
            if (type === 'all') {
                renderImages();
            } else {
                const filtered = allImages.filter(item => {
                    // 首先将内部处理类型代码转换为对应的显示名称
                    let displayType = item.processType || '';
                    switch (displayType) {
                        case 'IMAGE_EXPANSION':
                            displayType = '智能扩图';
                            break;
                        case 'IMAGE_SHARPENING':
                            displayType = '模糊图片变清晰';
                            break;
                        case 'IMAGE_COLORIZATION':
                            displayType = '图像上色';
                            break;
                        case 'GLOBAL_STYLE':
                        case 'global-style':
                            displayType = '全局风格化';
                            break;
                        case 'DIANTU':
                            displayType = '垫图';
                            break;
                        case 'LOCAL_REDRAW':
                            displayType = '局部重绘';
                            break;
                        case 'CLOTH_SEGMENTATION':
                            displayType = '智能服饰分割';
                            break;
                        case 'TEXT_TO_IMAGE':
                            displayType = '文生图片';
                            break;
                    }
                    
                    // 然后根据转换后的显示名称进行过滤
                    if (type === 'other') {
                        // 如果是"其他"类别，则排除所有已知类型
                        const knownTypes = [
                            '图片翻译', '营销图生成', '商品换背景', '场景图生成', 
                            '图像智能消除', '模特换肤', '模拟试衣', '智能扩图',
                            '模糊图片变清晰', '图像上色', '全局风格化', '垫图',
                            '局部重绘', '智能服饰分割', '文生图片'
                        ];
                        return !knownTypes.includes(displayType);
                    } else {
                        // 否则，匹配指定类型
                        return displayType === type;
                    }
                });
                renderImages(filtered);
            }
        }
        
        // 下载图片函数
        function downloadImage(url) {
            if (!url) return;
            
            const link = document.createElement('a');
            link.href = url;
            link.download = `image-${Date.now()}.png`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // 删除图片函数
        async function deleteImage(id) {
            if (confirm('确定要删除这张图片吗？')) {
                try {
                    // 调用后端API删除图片
                    const token = localStorage.getItem('authToken') || '';
                    const response = await fetch(`/api/delete-image/${id}`, {
                        method: 'DELETE',
                        headers: {
                            'Authorization': token ? `Bearer ${token}` : ''
                        }
                    });
                    
                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.message || '删除失败');
                    }
                    
                    // 从本地数组中移除
                    allImages = allImages.filter(item => item.id.toString() !== id.toString());
                    
                    // 从选中集合中移除
                    selectedItems.delete(id.toString());
                    
                    // 重新渲染
                    renderImages();
                    
                    // 如果没有选中项，隐藏删除按钮
                    if (selectedItems.size === 0) {
                        document.getElementById('delete-selected-btn').classList.add('hidden');
                    }
                } catch (error) {
                    console.error('删除失败:', error);
                    alert('删除失败: ' + error.message);
                }
            }
        }
        
