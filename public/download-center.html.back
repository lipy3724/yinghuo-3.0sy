                </div>
            </div>
            
            <!-- 列表视图容器 -->
            <div id="image-list" class="hidden">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-gray-50 text-left">
                            <th class="p-3 border-b"><input type="checkbox" id="select-all-table"></th>
                            <th class="p-3 border-b">图片</th>
                            <th class="p-3 border-b">处理类型</th>
                            <th class="p-3 border-b">时间</th>
                            <th class="p-3 border-b">操作</th>
                        </tr>
                    </thead>
